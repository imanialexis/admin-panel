<div class ='form-wrapper'>
<div class = 'main'>

<h1>Add Cohort </h1>

<%= form_with model: @cohort do |form| %>
   
     <div class="form-group">
          <%= form.text_field :name , placeholder: 'Enter cohort name'%>
      </div>

     <div class="form-group">
        <%= form.date_field :start_date , placeholder: 'Enter start date'%>
        </div>

      <div class="form-group">
        <%= form.date_field :end_date , placeholder: 'Enter end date' %>
      </div>
      
     <div class="form-group">
      <% form.label :course_id %> Select Course 
            <%# <%= form.select :course_id, @courses_id %> 
          <%= collection_select(:cohort, :course_id, Course.all, :id, :name) %>
      </div>

      

     <div class="form-group">
           <% form.label :instructor_id %> Select Instructor 
        <%= collection_select(:cohort, :instructor_id, Instructor.all, :id, :lname) %>

          
      </div>

    <%# <div class="form-group">
           <% form.label 'Instructor  Options'  %> 
            <%# <%= form.select @instructors_info %> 
            <%# <%= options_from_collection_for_select(Instructor.all, :id, :fname, :lname) %>
          
      <%# </div> %> 

     <div class="form-group">
        <%= form.submit class: "btn btn-light" %>
      </div>

     
 
 </div>
</div>
<% end %>


