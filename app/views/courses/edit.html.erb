
<div class ='form-wrapper'>
<div class = 'main'>
<h1> Edit Course </h1>

<%= form_with model: @course do |form| %>

     <div class="form-group">
        <%= form.text_field :name , placeholder: 'Enter name'%>
    </div>

      <div class="form-group">
        <%= form.text_field :total_class_hours , placeholder: 'Enter total class hours'%>
    </div>


    <div class="form-group">
      <%= form.text_area :description , placeholder: 'Enter course description' %>
    </div>

  
    <div class="form-group">
      <%= form.submit class: "btn btn-outline-success" %>
    </div>
    <%= link_to 'Delete', course_path(@course), method: :delete, remote:true, data: { confirm: 'Are you sure?' } , class: "btn btn-outline-success"%>

</div>
</div>

<% end %>