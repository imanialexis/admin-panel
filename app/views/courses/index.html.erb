
<div class='main'>
        <h1>Courses</h1>

        <% @all_courses.each do |course|%>
           <div id= 'course-<%= course.id%>'>
                <h3><%= course.name %> </h3> 
                <h5> Registration id: <%= course.id %></h5>
                <p>Description: <%= course.description %></p>
                <p>Total class time: <%= course.total_class_hours %></p>
                <%= link_to 'Edit' , edit_course_path(course)%> / <%= link_to 'Delete', course_path(course), method: :delete, remote:true, data: { confirm: 'Are you sure?' } %>
           </div>
        <hr>
        <% end%>
        <%= link_to 'Add Course' , new_course_path(@course), class: "btn btn-success" %>
</div>
