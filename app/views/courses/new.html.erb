<div class ='form-wrapper'>

  <div class ='main'>
    <h1> Add Course </h1>

      <%= form_with model: @course do |form| %>
      
      <div class="form-group">
      <%= form.text_field :name , placeholder: 'Enter name'%>
        </div>


      <div class="form-group">
      <%= form.text_field :total_class_hours , placeholder: 'Enter total class hours'%>
        </div>


      <div class="form-group">
      <%= form.text_area :description , placeholder: 'Enter course description' %>
        </div>


      <div class="form-group">
      <%# <%= form.text_field :instructor_id , placeholder: 'Enter Instructor ID'%> 
                 <% form.label :instructor_id %> Instructor 
            <%= form.select :instructor_id, (@instructors_info) %>
        </div>


      <div class="form-group">
        <%= form.submit %>
          </div>

  </div>
</div>
<% end %>

