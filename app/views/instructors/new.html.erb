<div class ='form-wrapper'>
<h1> Add Instructor </h1>

<%= form_with model: @student do |form| %>
  <div class="form-group">
  <%= form.text_field :fname , placeholder: 'Enter first name'%>
  </div>
  
  <div class="form-group">
    <%= form.text_field :lname , placeholder: 'Enter last name'%>
    </div>

    <div class="form-group">
      <%= form.text_field :email , placeholder: 'Enter school email'%>
      </div>
      
      
      <div class="form-group">
        <%= form.text_field :password , placeholder: 'Enter password'%>
        </div>
        
        <div class="form-group">
          <%= form.text_field :age , placeholder: 'Enter age'%>
        </div>
          
          <div class="form-group">
          <%= form.text_field :salary , placeholder: 'Enter salary'%>
          </div>
          
          <div class="form-group">
            <%= form.text_field :highest_edu , placeholder: 'Enter highest education'%>
            </div>

            <div class="form-group">
            <%= form.text_field :cohort_id , placeholder: 'Enter cohort id'%>
            </div>

            <div class="form-group">
            <%= form.hidden_field :is_admin , value: false %>
          </div>

 
          <div class="form-group">
            <%= form.submit %>
            </div>
<% end %>