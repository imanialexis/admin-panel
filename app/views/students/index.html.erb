<%# <div class = 'main'> %>
  <div class ='page-header'>
    <h1>Students</h1>
    <%# <img src = '/assets/chef3.png'> %>
  </div>

  
  <table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Course</th>
      <th scope="col">Cohort</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
   
<% @all_students.each_with_index do |student, index|%>
       <tbody>
        <tr id="student-<%=student.id%>">
          <th scope="row"><%= index + 1 %></th>
          <td><%= student.fname %></td>
          <td><%= student.lname %></td>
          <% something = Cohort.find(student.cohort_id) %>
          <td><%= Course.find(something.course_id).name %></td>
          <td><%= something.name %></td>
          <td><%= link_to 'Edit' , edit_student_path(student)%></td>
          <td> <%= link_to 'Delete', student_path(student), method: :delete, remote:true, data: { confirm: 'Are you sure?' } %> </td>
        </tr>
      <% end %>
<%# </div> %>
  </tbody>
</table>

        <%= link_to 'Add Student' , new_student_path(@student), class: "btn btn-light" %>





 
        


 